# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/tienda_libreria"
SHADOW_DATABASE_URL="postgresql://postgres:postgres@localhost:5433/tienda_libreria"

# Application
NODE_ENV="development"
PORT=3000
LOG_LEVEL="info"

# File Uploads
UPLOAD_DIR="./uploads"
MAX_UPLOAD_MB=20

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Application Security
AUTH_TRUST_HOST=true
AUTH_SECURE_COOKIE=false
CSRF_SECRET=your-csrf-secret-key-change-this-too

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS="http://localhost:5174"

# Optional: External Services
# OCR_SERVICE_URL=
# STORAGE_BUCKET=
# STORAGE_REGION=
# STORAGE_ACCESS_KEY=
# STORAGE_SECRET_KEY=
MAX_FILE_SIZE="10MB"

# OCR Configuration
TESSERACT_LANG="spa"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# Session (generate a secure secret for production)
SESSION_SECRET="change-this-in-production"