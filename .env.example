# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/tienda-libreria"
SHADOW_DATABASE_URL="postgresql://postgres:postgres@localhost:5433/tienda-libreria"

# ================
# Configuración de la Aplicación
# ================
NODE_ENV="development"
PORT=3000
LOG_LEVEL="info"
APP_URL="http://localhost:3000"

# ================
# Seguridad
# ================
# Genera una clave segura con: `openssl rand -base64 32`
SESSION_SECRET="cambiar-por-una-clave-segura"
SESSION_MAX_AGE=86400  # 24 horas en segundos
CORS_ORIGINS="http://localhost:5173,http://localhost:5174"

# ================
# Redis (Sesiones y Colas)
# ================
REDIS_URL="redis://localhost:6379"

# ================
# Archivos y Subidas
# ================
UPLOAD_DIR="./uploads"
EXTRACTION_DIR="./extractions"
MAX_UPLOAD_MB=20

# Authentication (if needed)
# AUTH_SECRET=your-secret-key
# AUTH_TRUST_HOST=true
# AUTH_SECURE_COOKIE=false

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS="http://localhost:5174"

# Optional: External Services
# OCR_SERVICE_URL=
# STORAGE_BUCKET=
# STORAGE_REGION=
# STORAGE_ACCESS_KEY=
# STORAGE_SECRET_KEY=
MAX_FILE_SIZE="10MB"

# ================
# Integraciones (Opcionales)
# ================

# Mercado Pago
# MERCADOPAGO_ACCESS_TOKEN=""
# MERCADOPAGO_PUBLIC_KEY=""
# MERCADOPAGO_WEBHOOK_SECRET=""

# Correo Electrónico
# SMTP_HOST="smtp.example.com"
# SMTP_PORT=587
# SMTP_USER="user@example.com"
# SMTP_PASSWORD="password"
# EMAIL_FROM=""

# ================
# Configuraciones de Desarrollo
# ================
# VITE_NO_CACHE="false"
# PRISMA_LOG_QUERIES="false"
TESSERACT_LANG="spa"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# Session (generate a secure secret for production)
SESSION_SECRET="change-this-in-production"